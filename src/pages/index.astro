---
import Layout from '@/layouts/Layout.astro';
import backgroundMobile from '@/assets/home/background-home-mobile.jpg';
import backgroundTablet from '@/assets/home/background-home-tablet.jpg';
import backgroundDesktop from '@/assets/home/background-home-desktop.jpg';

const base = import.meta.env.BASE_URL;
---

<Layout 
	title="Space Tourism | Home"
	backgroundMobile={backgroundMobile}
	backgroundTablet={backgroundTablet}
	backgroundDesktop={backgroundDesktop}
>
	<section class="relative w-full min-h-screen flex items-end lg:items-center justify-center px-6 md:px-12 lg:px-24 pb-12 lg:pb-24">
		<div class="container mx-auto flex flex-col lg:flex-row items-center justify-between gap-12 lg:gap-24 max-w-7xl w-full">
			<!-- Left Content -->
			<div class="flex flex-col items-center lg:items-start text-center lg:text-left max-w-md space-y-4 lg:space-y-6">
				<h2 class="text-preset-5 text-blue-300 uppercase tracking-[2.7px]">
					So, you want to travel to
				</h2>
				<h1 class="text-[80px] md:text-[150px] leading-[100px] md:leading-[150px] lg:text-preset-1 lg:leading-[172px] text-white uppercase font-bellefair">
					Space
				</h1>
				<p class="text-[15px] md:text-preset-8 lg:text-preset-9 text-blue-300 leading-[25px] md:leading-[28px] lg:leading-400">
					Let's face it; if you want to go to space, you might as well genuinely go to 
					outer space and not hover kind of on the edge of it. Well sit back, and relax 
					because we'll give you a truly out of this world experience!
				</p>
			</div>
			
			<div class="flex items-center justify-center lg:justify-end flex-1">
				<a 
					href=`${base}/destination`
					class="relative w-[150px] h-[150px] md:w-[242px] md:h-[242px] lg:w-[274px] lg:h-[274px] rounded-full bg-white flex items-center justify-center text-blue-900 text-[20px] md:text-preset-4 uppercase tracking-[1.25px] md:tracking-[2px] hover:shadow-[0_0_0_88px_rgba(255,255,255,0.1)] transition-all duration-500 font-bellefair"
				>
					Explore
				</a>
			</div>
		</div>
	</section>
</Layout>
